generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Anime {
  id          String   @id @default(cuid())
  title       String
  description String?
  genre       String?
  year        Int?
  status      String   @default("active") // active, completed, dead
  bounty      Int      @default(0) // bounty reward in gold coins
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}